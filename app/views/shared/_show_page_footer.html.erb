           <li class="four columns"><a href="http://www.zazzle.com/api/create/at-238653060974957095?rf=238653060974957095&ax=Linkover&pd=144315287555416936&fwd=ProductPage&ed=true&tc=&ic=&quote=<%= @quote.quote_text %>" target="_blank"><%= image_tag "mousepad.jpg", alt: "Men's shirt" %><span>Mousepad</span></a></li>
         </div>
       </ul> 
     </div><!--row-->
     <a class="close-reveal-modal">&#215;</a>
</div>

<script>
$(function()  {
  var current_class = $("body").attr("class")
  $("body").removeClass(current_class).addClass(unique_random_class(current_class), "1000");
  $("li.twitter a").click(function()  {
    var width  = 575,
        height = 400,
        left   = ($(window).width()  - width)  / 2,
        top    = ($(window).height() - height) / 2,
        url    = this.href,
        opts   = 'status=1' +
                 ',width='  + width  +
                 ',height=' + height +
                 ',top='    + top    +
                 ',left='   + left;

        window.open($(this).data("url"), 'twitter', opts);
    return false;
  });

  
  $(".fb-like").css({
    top: "20px",
    left: "60px",
    width: "83px",
    background: "transparent"
  }).hide();
  
  $("li.facebook").hover(function() {
    $(".fb-like").fadeIn();
  }, function() {
    $(".fb-like").fadeOut();
  })
  
  $(".tshirt").click(function() {
    $("#quote, footer#fixed").css("z-index", 1)
    $('#zazzle').reveal();  
    return false;       
  })
  
});
</script>