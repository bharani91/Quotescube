
<footer id="fixed">
  <div class="container">
    <div class="row">
      <ul class="eight columns centered ">
        <li class="share facebook four columns" style="position: relative;">
          <div class="fb-like" style="position: absolute; top: 0; left: 0; z-index: 1000" data-href="" data-send="false" data-layout="button_count" data-width="83" data-show-faces="false" data-font="lucida grande"></div>
          <span href="#" title="Share on Facebook" class="button black">Facebook</span>
          </li>
        <li class="four columns"><%= link_to "Shuffle", @next_quote.permalink, class: "button black", id: "shuffle" %></li>
        <li class="share twitter four columns"><a href="#" data-url='http://twitter.com/share?text=<%= tweet_msg(@quote) %>' title="Share on Twitter" class="button black">Tweet!</a></li>
      </ul>
    </div><!--row-->
  </div><!--container-->
</footer>

